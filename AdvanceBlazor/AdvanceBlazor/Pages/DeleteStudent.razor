@page "/DeleteStudent/{ CurrentID}"
@using AdvanceBlazor.Data
@inject StudentServices studentservices
@inject NavigationManager NavigationManager

<h2>Delete Students</h2>
<hr />
<h3>Are you sure you want to delete</h3>
<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <lable>StudentId:</lable>
            <label>@student.StudentID</label>

        </div>
        <div class="form-group">
            <lable>Student Name:</lable>
            <label>@student.Name</label>

        </div>
        <div class="form-group">
            <lable>Student City:</lable>
            <label>@student.City</label>

        </div>
        <div class="form-group">
            <lable>Student Age:</lable>
            <label>@student.Age</label>

        </div>
        <div class="form-group">
            <lable>Student Gender:</lable>
            <label>@student.Gender</label>

        </div>

    </div>

</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" class="btn btn-danger" @onclick="@Delete" value="Delete" />
            <input type="button" class="btn btn-primary" @onclick="@Cancle" value="cancle" />
        </div>

    </div>

</div>


@code {
    [Parameter]
    public string CurrentID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        student = await Task.Run(() => studentservices.GetStudentId(Convert.ToInt32(CurrentID)));
    }



    Student student = new Student();
    protected void Delete()
    {
        studentservices.Delete(student);
        NavigationManager.NavigateTo("Student");
    }
    void Cancle()
    {
        NavigationManager.NavigateTo("Student");
    }
}
